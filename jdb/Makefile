#====================================================================
#       Macro & Assembler flags
#====================================================================

STADDR = 2000
MACFLAGS = -fb -g -i../include
ALNFLAGS = -w -v -v -e -rd -g -l -a $(STADDR) x 2800

#====================================================================
#       Default Rules
#====================================================================
.SUFFIXES:      .o .s

.s.o:
	mac $(MACFLAGS) $<

#====================================================================
#       EXECUTABLES
#====================================================================

OBJ = jdb.o
 
jdb.cof: $(OBJ)
	aln $(ALNFLAGS) -o jdb.cof $(OBJ)

#############################################################################

jdb.o: jdb.s 

clean:
	$(RM) $(OBJ) jdb.cof
